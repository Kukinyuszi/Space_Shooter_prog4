<Window x:Class="Space_shooter.Windows.IntroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Space_shooter.Windows"
        mc:Ignorable="d"
        Title="IntroWindow" Height="735" Width="550" WindowStartupLocation="CenterScreen" WindowStyle="None"  ResizeMode="NoResize">
    <Canvas Margin="-600,0,-600,0">
        <Canvas.Background>
            <VisualBrush Stretch="Fill" >
                <VisualBrush.Visual>
                    <MediaElement x:Name="mediaElement" MediaEnded="MediaElement_MediaEnded" UnloadedBehavior="Play" Source="Videos/Intro_video.mp4" Volume="1" />
                </VisualBrush.Visual>
            </VisualBrush>
        </Canvas.Background>
    </Canvas>
</Window>
