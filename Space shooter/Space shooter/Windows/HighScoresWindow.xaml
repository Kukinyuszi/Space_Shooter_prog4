<Window x:Class="Space_shooter.Windows.HighScoresWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Space_shooter.Windows"
        mc:Ignorable="d"
       Title="HighScoresWindow" Height="448" Width="1024" WindowStartupLocation="CenterScreen" WindowStyle="SingleBorderWindow"  KeyDown="Window_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="387*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="15*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Highscores:" Margin="10,10,10,10" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center"/>
        <StackPanel x:Name="sp_scores" Grid.Column="1" Grid.Row="1" CanVerticallyScroll="True" Grid.RowSpan="2">

        </StackPanel>

    </Grid>
</Window>
