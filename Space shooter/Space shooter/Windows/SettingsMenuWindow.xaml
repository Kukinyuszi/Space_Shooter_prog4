<Window x:Class="Space_shooter.Windows.SettingsMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Space_shooter.Windows"
        mc:Ignorable="d"
        Title="SettingsMenuWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Music" Margin="15" FontSize="20" HorizontalAlignment="Center" Grid.Row="1"/>
        <Label Content="Resolution" Margin="15" FontSize="20" HorizontalAlignment="Center" Grid.Row="2"/>
        <Label Content="Animation" Margin="15" FontSize="20" HorizontalAlignment="Center" Grid.Row="3"/>
        <WrapPanel Grid.Row="1" Grid.Column="1">
            <RadioButton GroupName="music" Content="ON" Margin="10" IsChecked="True"/>
            <RadioButton GroupName="music" Content="OFF" Margin="10"/>
        </WrapPanel>
        <WrapPanel Grid.Row="2" Grid.Column="1">
            <ComboBox MinHeight="20" MinWidth="150" Margin="10,25,10,10">
                <ComboBoxItem Content="High" IsSelected="True"/>
                <ComboBoxItem Content="Medium" />
                <ComboBoxItem Content="Low"/>
            </ComboBox>
        </WrapPanel>
        <WrapPanel Grid.Row="3" Grid.Column="1">
            <RadioButton GroupName="animation" Content="ON" Margin="10" IsChecked="True"/>
            <RadioButton GroupName="animation" Content="OFF" Margin="10"/>
        </WrapPanel>
        <Button Content="Back" Click="Back_Button_Click" Grid.ColumnSpan="2" Margin="264,22,267,10" Grid.Row="4" />
    </Grid>
</Window>
