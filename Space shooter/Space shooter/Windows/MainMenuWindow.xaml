<Window x:Class="Space_shooter.Windows.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="clr-namespace:XamlAnimatedGif;assembly=XamlAnimatedGif"
        xmlns:local="clr-namespace:Space_shooter.Windows"
        mc:Ignorable="d"
       Title="Main Menu" Height="735" Width="550" WindowStartupLocation="CenterScreen" WindowStyle="None" Background="Black" ResizeMode="NoResize">


    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="FontSize" Value="30" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="MaxHeight" Value="60" />
            <Setter Property="Width" Value="150" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="Wheat"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" 
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" 
                          Value="True">
                                <Setter Property="Foreground" 
                           Value="Yellow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>


    <Grid>
        <Grid.Background>
            <VisualBrush>
                <VisualBrush.Visual>
                    <!--Menu_Background_cat.gif-->
                    <!--/Windows/Menu_Background_light.gif-->
                    <Image Stretch="Fill"
                           gif:AnimationBehavior.SourceUri="/Windows/Menu_Background_light.gif"
                           gif:AnimationBehavior.AnimateInDesignMode="False"/>
                </VisualBrush.Visual>
            </VisualBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="1" Content="SPACE" FontWeight="Bold" FontSize="56" VerticalContentAlignment="Center" HorizontalAlignment="Center" Foreground="Yellow" FontFamily="Agency FB" Background="{x:Null}" VerticalAlignment="Bottom"/>
        <Label Grid.Column="1" Grid.Row="1" Content="SHOOTER" FontWeight="Bold" FontSize="56" VerticalContentAlignment="Center" HorizontalAlignment="Center" Foreground="Yellow" FontFamily="Agency FB" Background="{x:Null}" VerticalAlignment="Top"/>
        <Label Foreground="White" Margin="56,396,35,14" Grid.Row="2" HorizontalContentAlignment="Center" Grid.Column="1">
            <Label.Content>
                <AccessText TextWrapping="Wrap" Text="&#x09; Tipp:&#x0a;Try typing G-O-D while playing"  />
            </Label.Content>
        </Label>
        <Label  Content="V4.01" Foreground="White" Margin="86,429,0,0" Height="30" Grid.Row="2" Grid.Column="2"/>
        <StackPanel Grid.Row="2" Grid.Column="1">
            <Button Content="New game"  Click="Start_Button_Click"  FontFamily="Agency FB" />
            <Button Content="Load"  Click="Load_Button_Click"   FontFamily="Agency FB"/>
            <Button Content="How to play"  Click="HowToPlay_Button_Click"   FontFamily="Agency FB" />
            <Button Content="Score board"  Click="ScoreBoard_Click"   FontFamily="Agency FB"/>
            <Button Content="Settings"  Click="Settings_Button_Click"    FontFamily="Agency FB"/>
            <Button Content="Credits"  Click="Credits_Button_Click"    FontFamily="Agency FB"/>
            <Button Content="Quit"   Click="Quit_Button_Click"  FontFamily="Agency FB"/>
        </StackPanel>
        <Grid x:Name="MainArea" Grid.RowSpan="3" Grid.ColumnSpan="3"/>
    </Grid>
</Window>
